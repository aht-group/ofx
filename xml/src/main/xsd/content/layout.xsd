<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema targetNamespace="http://www.openfuxml.org/layout"
	xmlns="http://www.openfuxml.org/layout"
	xmlns:ofx="http://www.openfuxml.org"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
    xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
    jaxb:extensionBindingPrefixes="xjc"
    jaxb:version="2.0">
    <xsd:import namespace="http://www.openfuxml.org" schemaLocation="ofx.xsd"/>
    <xsd:element name="layout">
        <xsd:complexType>
            <xsd:sequence>
				<xsd:element ref="line" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="container">
        <xsd:complexType mixed="true">
            <xsd:sequence>
            	<xsd:element ref="font" minOccurs="0" maxOccurs="1"/>
                <xsd:element ref="ofx:paragraph" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="alignment">
    	<xsd:complexType>
	    	<xsd:attribute name="horizontal">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:enumeration value="left"/>
						<xsd:enumeration value="center"/>
						<xsd:enumeration value="right"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:attribute>
    	</xsd:complexType>
    </xsd:element>
    <xsd:element name="box">
    	<xsd:complexType>
	    	
    	</xsd:complexType>
    </xsd:element>
    <xsd:element name="width">
		 <xsd:complexType>
            <xsd:simpleContent>
                <xsd:extension base="xsd:double">
                    <xsd:attribute name="unit" use="required">
                        <xsd:simpleType>
                            <xsd:restriction base="xsd:string"/>
                        </xsd:simpleType>
                    </xsd:attribute>
                    <xsd:attribute name="flex" use="required">
                        <xsd:simpleType>
                            <xsd:restriction base="xsd:boolean"/>
                        </xsd:simpleType>
                    </xsd:attribute>
                    <xsd:attribute name="narrow" use="optional">
                        <xsd:simpleType>
                            <xsd:restriction base="xsd:boolean"/>
                        </xsd:simpleType>
                    </xsd:attribute>
                </xsd:extension>
            </xsd:simpleContent>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="font">
		 <xsd:complexType>
            <xsd:attribute name="relativeSize" type="xsd:int"/>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="height">
		 <xsd:complexType>
            <xsd:simpleContent>
                <xsd:extension base="xsd:double">
                    <xsd:attribute name="unit" use="required">
                        <xsd:simpleType>
                            <xsd:restriction base="xsd:string"/>
                        </xsd:simpleType>
                    </xsd:attribute>
                </xsd:extension>
            </xsd:simpleContent>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="float">
		 <xsd:complexType>
            <xsd:simpleContent>
                <xsd:extension base="xsd:boolean"/>
            </xsd:simpleContent>
        </xsd:complexType>
    </xsd:element>
    <xsd:element name="line">
    	<xsd:complexType>
	    	<xsd:attribute name="orientation">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:enumeration value="top"/>
						<xsd:enumeration value="bottom"/>
						<xsd:enumeration value="left"/>
						<xsd:enumeration value="right"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:attribute>
    	</xsd:complexType>
    </xsd:element>
</xsd:schema>
